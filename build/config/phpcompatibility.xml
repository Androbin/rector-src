<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="PHPCompatibility ruleset" xsi:noNamespaceSchemaLocation="./vendor/squizlabs/php_codesniffer/phpcs.xsd">

    <!--
    #############################################################################
    COMMAND LINE ARGUMENTS
    https://github.com/squizlabs/PHP_CodeSniffer/wiki/Annotated-ruleset.xml
    #############################################################################
    -->

    <file>./rector-prefixed-downgraded/</file>

    <!-- Exclude PHPDoc structure files. -->
    <exclude-pattern>*/rector-prefixed-downgraded/stubs/*</exclude-pattern>
    <!-- these are never used, only required by symfony/http-kernel, but not really needed -->
    <exclude-pattern>*/rector-prefixed-downgraded/vendor/symfony/error-handler/*</exclude-pattern>
    <exclude-pattern>*/rector-prefixed-downgraded/vendor/symfony/var-dumper/*</exclude-pattern>

    <exclude-pattern>*/rector-prefixed-downgraded/vendor/symfony/http-kernel/Resources/*</exclude-pattern>
    <exclude-pattern>*/rector-prefixed-downgraded/vendor/rector/rector-nette/tests/*</exclude-pattern>
    <exclude-pattern>*/rector-prefixed-downgraded/vendor/symfony/polyfill-mbstring/bootstrap80.php/*</exclude-pattern>
    <exclude-pattern>*/rector-prefixed-downgraded/vendor/tracy/tracy/examples/*</exclude-pattern>
    <exclude-pattern>*/rector-prefixed-downgraded/vendor/ssch/typo3-rector/templates/maker/*</exclude-pattern>
    <exclude-pattern>*/rector-prefixed-downgraded/vendor/ssch/typo3-rector/stubs/*</exclude-pattern>


    <rule name="PHPCompatibility.Keywords.ForbiddenNamesAsDeclared.stringFound">
        <!-- namespace String token is allowed, not sure how to exclude that for T_NAMESPACE only, so is now global -->
        <exclude-pattern>*/rector-prefixed-downgraded/vendor/symfony/string</exclude-pattern>
    </rule>

    <rule name="PHPCompatibility.Keywords.ForbiddenNamesAsDeclared.resourceFound">
        <!-- namespace Resource token is allowed, not sure how to exclude that for T_NAMESPACE only, so is now global -->
        <exclude-pattern>*/rector-prefixed-downgraded/vendor/symfony/config/Resource</exclude-pattern>
    </rule>

    <rule name="PHPCompatibility.FunctionUse.ArgumentFunctionsReportCurrentValue.NeedsInspection">
        <!-- trusted source -->
        <exclude-pattern>*/rector-prefixed-downgraded/vendor/nette/utils/src/Utils/Callback.php</exclude-pattern>
        <exclude-pattern>*/rector-prefixed-downgraded/vendor/tracy/tracy/src/Tracy/Logger/FireLogger.php</exclude-pattern>
        <exclude-pattern>*/rector-prefixed-downgraded/vendor/idiosyncratic/editorconfig/src/Section.php</exclude-pattern>
    </rule>

    <!-- Only check PHP files. -->
    <arg name="extensions" value="php"/>

    <!-- Show progress, show the error codes for each message (source). -->
    <arg value="ps"/>

    <!-- Strip the filepaths down to the relevant bit. -->
    <arg name="basepath" value="./rector-prefixed-downgraded/"/>

    <!-- Check up to 8 files simultaneously. -->
    <arg name="parallel" value="8"/>

    <!--
    #############################################################################
    SET THE RULESET
    #############################################################################
    -->

    <!-- Set minimum PHP version supported to PHP 7.1. -->
    <config name="testVersion" value="7.1-"/>

    <rule ref="PHPCompatibility"/>

</ruleset>
